{
  "name": "doantotnghiep-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:backend": "npm run dev --workspace=@doantotnghiep/backend",
    "dev:frontend": "npm run dev --workspace=@doantotnghiep/frontend",
    "build": "turbo run build",
    "build:backend": "npm run build --workspace=@doantotnghiep/backend",
    "build:frontend": "npm run build --workspace=@doantotnghiep/frontend",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:generate": "cd packages/prisma && npx prisma generate",
    "db:push": "cd packages/prisma && npx prisma db push",
    "db:migrate": "cd packages/prisma && npx prisma migrate dev",
    "db:studio": "cd packages/prisma && npx prisma studio"
  },
  "devDependencies": {
    "tsx": "^4.20.6",
    "turbo": "^2.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@10.0.0"
}
